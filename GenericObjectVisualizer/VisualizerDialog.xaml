<Window x:Class="GenericObjectVisualizer.VisualizerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:genericObjectVisualizer="clr-namespace:GenericObjectVisualizer"
        Title="MainWindow" Height="350" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <genericObjectVisualizer:GovText x:Name="GovXml" Format="Xml" Content="{Binding ViewModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Column="1"/>
        <genericObjectVisualizer:GovText x:Name="GovJson" Format="Json" Content="{Binding ViewModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Column="0"/>
        <genericObjectVisualizer:GovKeyValue x:Name="GovKeyValue" Content="{Binding ViewModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Column="2"/>

        </Grid>
</Window>
